<%= simple_form_for @organization_language, url: update_status_organization_languages_path, html: { method: "post", class: "form-vertical" } do |f| %>
  <%= control_group do %>
    <%= f.hidden_field :language_id, value: @language.id %>
    <div class="false-label col-form-label">
      <%= Language.human_attribute_name(:title) %>
    </div>
    <%= controls do %>
      <b><%= (@language.title.to_s + " (#{@language.display_title})") %></b>
    <% end %>
  <% end %>

  <%= control_group do %>
    <div class="false-label col-form-label m-b-xs"><%= "feature.language.manage_page.header.Display_Title".translate %></div>
    <%= controls do %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.input :title, label_html: { class: "sr-only" }, wrapper_html: { class: "no-margins" }, input_html: { value: (@organization_language.try(:title) || @language.title), class: "form-control inline" } %>
        </div>
        <div class="col-sm-6">
          <%= f.input :display_title, label_html: { class: "sr-only" }, wrapper_html: { class: "no-margins" }, input_html: { value: (@organization_language.try(:display_title) || @language.display_title), class: "form-control inline" } %>
        </div>
      </div>
    <% end %>
  <% end %>

  <%= f.input :enabled, collection: get_enabled_options_array, include_blank: false, label: Language.human_attribute_name(:enabled), label_html: { class: "font-600" }, input_html: { class: "form-control" }  %>

  <%= control_group do %>
    <div class="false-label col-form-label">
      <%= OrganizationLanguage.human_attribute_name(:enabled) %>
    </div>
    <%= controls do %>
      <%= get_available_for_string(@language.language_name) %>
    <% end %>
  <% end %>

  <% if can_show_enabled_programs_list? %>
    <% programs_enabled_for_term = "feature.language.manage_page.header.Programs_Enabled_For".translate(Programs: _Programs) %>
    <%= control_group do %>
      <div class="false-label col-form-label m-b-xs"><%= programs_enabled_for_term %></div>
      <div class= "card card-body card-default p-xs clearfix choices_wrapper row mx-0">
        <div class='col-12 no-padding'><%= get_programs_selector(@organization_language, programs_enabled_for_term) %></div>
      </div>
    <% end %>
  <% end %>

  <% action_set(class: "float-right") do %>
    <%= link_to "display_string.Cancel".translate, "javascript:void(0)", class: "btn btn-white", "data-dismiss" => "modal" %>
    <%= f.button :submit, "display_string.Save".translate %>
  <% end %>
<% end %>
