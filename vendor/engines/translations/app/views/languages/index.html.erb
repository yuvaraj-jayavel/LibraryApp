<div id="languages_page">
  <div class="p-md p-l-m white-bg h4 no-vertical-margins">
    <%= get_icon_content('fa-regular fa-language') %> 
    <%= 'feature.language.manage_page.header.manage_languages'.translate %>
    <%= link_to('feature.language.manage_page.action.create_new'.translate, new_language_path, :class => 'btn btn-primary float-right m-t-n-xs font-14') %>
  </div>

  <%= ibox nil do %>
    <div class="table-responsive">
      <table class="table table-striped pane" cellpadding="0" cellspacing="0">
        <thead class="pane-header">
          <tr class="row mx-0">
            <th class="col-2"><%= Language.human_attribute_name(:title) %></th>
            <th class="col-2"><%= Language.human_attribute_name(:display_title) %></th>
            <th class="col-2"><%= Language.human_attribute_name(:language_name) %></th>
            <th class="col-2"><%= Language.human_attribute_name(:status) %></th>
            <th class="col-1"><%= OrganizationLanguage.human_attribute_name(:enabled) %></th>
            <th class="col-3"><span class="float-right"><%= 'display_string.Actions'.translate %></span></th>
          </tr>
        </thead>
        <tbody>
          <% @languages.each do |language| %>
            <tr class="row mx-0">
              <td class="col-2"><%= language.title %></td>
              <td class="col-2"><%= language.display_title %></td>
              <td class="col-2"><%= language.language_name %></td>
              <td class="col-2"><%= language.enabled? ? 'display_string.Enabled'.translate : 'display_string.Disabled'.translate %></td>
              <td class="col-1"><%= get_available_for_string(language.language_name) %></td>
              <td class="col-3">
                <span class="float-right">
                  <% common_actions = [] %>
                  <% common_actions << (link_to get_icon_content("fa-regular fa-pencil") + 'display_string.Edit'.translate, edit_language_path(language), :class => "btn btn-white btn-xs btn-block-xxs") %>
                  <% common_actions << (link_to get_icon_content("fa-regular fa-trash") + 'display_string.Delete'.translate, language_path(language), :method => :delete, data: {:confirm => 'common_text.confirmation.sure_to_delete'.translate}, :class => "btn btn-white btn-xs btn-block-xxs") %>
                  <%= render_button_group(common_actions) %>
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>